pipeline{
    agent any
    tools{
        maven 'Maven 3'
    }

    stages{
      stage("Checkout"){
        steps{
          git branch:'main' ,url: 'https://github.com/suroy13/ProjectA.git'
        }
      }
      stage("Build"){
        steps{
            bat "mvn clean compile"
        }
      }
      stage("Test"){
        steps{
            bat "mvn test"
        }
      }
        stage("Package"){
            steps{
                bat "mvn package"
            }
            post{
               always {
    publishHTML([
      reportDir: 'target/site',
      reportFiles: 'index.html',
      reportName: 'Jenkins Pipeline Test Report'
    ])
  }

                success{
                    echo "Build and package successful!"
                }
                failure{
                    echo "All is Well!"
                }
            }
        }

    }
}