pipeline{
    agent any
    tools{
        maven "Maven 3"
    }

    stages{
      stage("Checkout"){
        steps{
          git branch:"main"  url:"https://github.com/suroy13/ProjectA.git"
        }
      }
      stage("Build"){
        steps{
            sh "mvn clean compile"
        }
      }
      stage("Test"){
        steps{
            sh "mvn test"
        }
      }
        stage("Package"){
            steps{
                sh "mvn package"
            }
            post{
                success{
                    echo "Build and package successful!"
                }
                failure{
                    echo "Build or package failed!"
                }
            }
        }

    }
}